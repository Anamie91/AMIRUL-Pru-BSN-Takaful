  <script>
    // Butang ke atas
    let topBtn = document.getElementById("topBtn");
    window.onscroll = function() {
      topBtn.style.display = (document.body.scrollTop > 300 || document.documentElement.scrollTop > 300) ? "block" : "none";
    };
    function topFunction() {
      window.scrollTo({ top: 0, behavior: 'smooth' });
    }

    // Simulasi borang hantar
    function handleSubmit(event) {
      event.preventDefault();
      const nama = document.getElementById("nama").value;
      const telefon = document.getElementById("telefon").value;
      const mesej = document.getElementById("mesej").value || "Saya berminat dengan pelan takaful.";

      const url = `https://wa.me/60188705007?text=Hai%20Agent%20Amirul%2C%20saya%20${encodeURIComponent(nama)}%20(${encodeURIComponent(telefon)}).%20${encodeURIComponent(mesej)}`;
      window.open(url, '_blank');
    }
  </script>

